{
    //manifest spec: http://developer.chrome.com/extensions/manifest.html
    //required
    "name": "Simple Pomodoro®",
    "version": "1.0",
    "manifest_version": 2,

    //recommended
    "description": "A simple Pomodoro® timer for Google Chrome™. The Pomodoro Technique® was created by Francesco Cirillo. Extension created by Ale Mohamad.",
    
    "icons": {
        "19": "images/icon_19.png",
        "38": "images/icon_38.png",
        "128": "images/icon_128.png"
    },

    //required
    "browser_action": {
        "default_title": "Simple Pomodoro®",
        "default_icon": {
            "19": "images/icon_19.png",
            "38": "images/icon_38.png"
        },
        "default_popup": "html/main.html"
    },

    "background": {
        "page": "html/background.html"
    },
    "permissions": [
        "background", "notifications", "storage"
    ],
    "web_accessible_resources": [
        "images/icon_64.png"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

    //additional
    // "homepage_url": "http://yourdomainhere.com/"
}
